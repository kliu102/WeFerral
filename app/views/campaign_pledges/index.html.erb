<p id="notice"><%= notice %></p>

<h1>Listing Campaign Pledges</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaign_pledges.each do |campaign_pledge| %>
      <tr>
        <td><%= link_to 'Show', campaign_pledge %></td>
        <td><%= link_to 'Edit', edit_campaign_pledge_path(campaign_pledge) %></td>
        <td><%= link_to 'Destroy', campaign_pledge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

